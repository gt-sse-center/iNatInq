# =============================================================================
# Pipeline Service Dockerfile (Development)
# =============================================================================
# Uses the pre-built base image with heavy dependencies (Ray, etc.)
# Only installs lightweight dependencies and copies application code.
#
# Build context: iNatInq/apps/
# Base image: inatinq/pipeline-base:0.1.0
#
# Quick rebuild (after base image exists):
#   docker compose -f zarf/compose/dev/docker-compose.yaml up -d --build pipeline
#
# Full rebuild (if base image doesn't exist):
#   docker build -f zarf/docker/base/Dockerfile.pipeline-base -t inatinq/pipeline-base:0.1.0 .
#   docker compose -f zarf/compose/dev/docker-compose.yaml up -d --build pipeline

# Use existing ml/pipeline-base image which has Ray and heavy deps
# Build your own with: make docker-build-base
FROM ml/pipeline-base:0.1.0

WORKDIR /app

# Set environment variables
ENV PYTHONPATH=/app/src

# Copy dependency files
COPY pyproject.toml ./

# Install remaining lightweight dependencies (Ray, requests are in base image)
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    attrs \
    pydantic \
    pydantic-settings \
    prometheus-fastapi-instrumentator \
    pybreaker \
    aiobreaker \
    tenacity \
    kubernetes \
    httpx \
    "qdrant-client>=1.12.0,<1.13.0" \
    weaviate-client \
    boto3

# Copy application code
COPY src/ /app/src/

# Create non-root user and switch to it
RUN useradd --create-home --shell /bin/bash appuser 2>/dev/null || true
RUN chown -R appuser:appuser /app 2>/dev/null || true
USER appuser

EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/healthz || exit 1

# Run uvicorn
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
